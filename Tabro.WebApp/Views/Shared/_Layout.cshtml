@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>Tabro.dk - everything software development</title>
    @Styles.Render("~/bundles/css")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/markdowndeep")

    <script type="text/javascript">
        $(function () {
            $(".mdd_editor").MarkdownDeep({
                ExtraMode: true,
                FormatCodeBlockAttributes: function (language) {
                    if (!language) {
                        var d = this.GetLinkDefinition("default_syntax");
                        if (!d)
                            return "";
                        language = d.title;
                    }
                    if (language == "C#")
                        language = "csharp";
                    if (language == "C++")
                        language = "cpp";

                    return " class=\"prettyprint lang-" + language + "\"";
                },
                FormatCodeBlock: function (code, lang) {
                    return "-- " + lang + " -- " + code + "--";
                },
                ExtractHeadBlocks: true,
            });
        });
    </script>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Tabro.dk</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                <li>@Html.ActionLink("About", "Index", "About")</li>
                <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right center-block">
                <li><a class="btn btn-lg" href="https://twitter.com/larstabro" target="_blank"><i class="fa fa-twitter"></i></a></li>
                <li><a class="btn btn-lg" href="http://dk.linkedin.com/in/larstabrosorensen/" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                <li><a class="btn btn-lg" href="https://www.facebook.com/tabro" target="_blank"><i class="fa fa-facebook"></i></a></li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/bootstrap")
