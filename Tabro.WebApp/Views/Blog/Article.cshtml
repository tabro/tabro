@model Tabro.WebApp.Models.ArticleViewModel

<section class="container-fluid article">
    <div class="row">
        <div class="col-md-12 articleHeaderBlock">
            <div class="articleHeaderText">
                <a href="/Blogs/@Model.ArticleKey.ToString()"><h2>@Model.Header</h2></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 articleInfoBlock">
            <div class="articleInfoComponents">
                <div class="articleInfoComponent">
                    <span class="glyphicon glyphicon-time"></span><span>@Model.Created.ToEnglishString()</span>
                </div>
                <div class="articleInfoComponent">
                    <span class="glyphicon glyphicon-comment"></span>
                    <a href="/Blogs/@Model.ArticleKey.ToString()#disqus_thread" data-disqus-identifier="@Model.ArticleKey.ToString()">Comments</a>
                </div>
                <div class="articleInfoComponent">
                    <span class="glyphicon glyphicon-arrow-right"></span>
                    <a href="#">Tech</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 ">
            <div class="articleContainer">
                @Html.Raw(Model.Body)
            </div>
            @if (Model.ShowCommentSection)
            {
                <div class="disqusContainer">
                    <div id="disqus_thread"></div>

                    <script type="text/javascript">
                        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                        var disqus_shortname = 'tabro'; // required: replace example with your forum shortname
                        var disqus_identifier = "@Model.ArticleKey.ToString()";
                        var disqus_title = "@Model.Header";
                        var disqus_url = "@Request.Url.AbsoluteUri";

                        /* * * DON'T EDIT BELOW THIS LINE * * */
                        (function() {
                            var dsq = document.createElement('script');
                            dsq.type = 'text/javascript';
                            dsq.async = true;
                            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                        })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                </div>
            }
            <div class="articleFooter">
                <div class="articleInfoComponent">
                    <span class="glyphicon glyphicon-comment"></span>
                    <a href="/Blogs/@Model.ArticleKey.ToString()#disqus_thread" data-disqus-identifier="@Model.ArticleKey.ToString()">Comments</a>
                </div>
                <div class="articleInfoComponent" style="float: right">
                    <ul class="list-inline">
                        <li><a class="btn btn-social-icon btn-twitter" href="https://twitter.com/larstabro" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li><a class="btn btn-social-icon btn-linkedin" href="https://twitter.com/larstabro" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                        <li><a class="btn btn-social-icon btn-facebook" href="https://twitter.com/larstabro" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</section>